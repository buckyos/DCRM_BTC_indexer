{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/src/test/test.js",
            "outFiles": ["${workspaceFolder}/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test_eth",
